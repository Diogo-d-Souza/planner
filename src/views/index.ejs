<%- include('includes/nav') %> <%- include('includes/head') %>
<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>

    <div class="col-lg-8 my-8">
      <h1 class="text-center">Planner</h1>
      <p class="text-center lead">Your contacts are below</p>
    </div>

    <%- include('includes/messages') %>

    <% if (contacts.length > 0) { %>
    <div class="responsive-table">
      <table class="table my-3">
        <% contacts.forEach(contact => { %>
          <tr>
            <td><%= contact.name %></td>
            <td><%= contact.lastname %></td>
            <td><%= contact.phone %></td>
            <td><%= contact.email %></td>
            <td><a href="/contact/<%= contact._id%>">Edit</a></td>
            <td><a class="text-danger" href="/contact/delete/<%= contact._id%>">Delete</a></td>
          </tr>
        <% }) %>
      </table>
    </div>
    <% } else {%>
      <p class="text-center lead">There are no contacts in your planner.</p>
      <% } %>

    <div class="col-lg-2"></div>
  </div>
</div>
<%- include('includes/footer') %>
